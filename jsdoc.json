{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": [".", "src/", "package.json", "README.md", "test/"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs|out|DEPRECATED)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
		"useLongnameInNav": false,
		"showInheritedInNav": true,
	    "default": {
			"staticFiles": {
				"include": [
					"./docs/assets"
				],
				"exclude": [
					"./docs/assets/tmpl"
				]
	      }
	    }
    },
    "opts": {
        "destination": "./docs/",
        "encoding": "utf8",
        "private": false,
        "recurse": false,
        "template": "./node_modules/minami"
    }
}