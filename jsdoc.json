{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["src", "package.json", "README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs|out|DEPRECATED)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
	    "default": {
			"layoutFile": "./docs/assets/tmpl/layout.tmpl",
			"staticFiles": {
				"include": [
					"./docs/assets"
				],
				"exclude": [
					"./docs/assets/tmpl"
				]
	      }
	    }
    },
    "opts": {
        "destination": "./docs/",
        "encoding": "utf8",
        "private": false,
        "recurse": true,
        "template": "./node_modules/minami"
    }
}